<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/bst5/css/bootstrap.min.css">
    <script src="/bst5/js/bootstrap.min.js"></script>
    <script src="/bst5/js/bootstrap.bundle.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/all.css">
    <title>ข้อมูลหมวดหมู่</title>
</head>

<body>
    <%- include('navbar') %>
        <div class="d-flex">
            <nav class="nav flex-column full-height-nav">
                <p style="font-size: 20px; text-align: center;">
                    <b>เมนู</b>
                </p>
                <% if ( type_user=='Admin' ) { %>
                    <a class="nav-link" href="/user" style="color: #333333;">
                        <i class="bi bi-people"></i>
                        ข้อมูลผู้ใช้
                    </a>
                    <a class="nav-link" href="/category" style="color: #1a75ff; text-shadow: 0px 0px 5px #1a75ff"">
                        <i class=" bi bi-bookmarks"></i>
                        ข้อมูลหมวดหมู่
                    </a>
                    <a class="nav-link" href="/device" style="color: #333333;">
                        <i class="bi bi-cpu"></i>
                        ข้อมูลอุปกรณ์
                    </a>
                    <a class="nav-link position-relative" href="/order" style="color: #333333;">
                        <i class="bi bi-cart"></i>
                        อนุมัติรายการ
                    </a>
                <% } else { %>
                    <a class="nav-link" href="/category" style="color: #1a75ff; text-shadow: 0px 0px 5px #1a75ff">
                        <i class=" bi bi-bookmarks"></i>
                        ข้อมูลหมวดหมู่
                    </a>
                    <a class="nav-link" href="/device" style="color: #333333;">
                        <i class="bi bi-cpu"></i>
                        ข้อมูลอุปกรณ์
                    </a>
                    <a class="nav-link position-relative" href="/order" style="color: #333333;">
                        <i class="bi bi-cart"></i>
                        รายการ
                    </a>
                <% } %>
            </nav>
            <div class="full-height">
                <br>
                <div class="row">
                    <div class="col">
                        <h1>ข้อมูลหมวดหมู่</h1>
                    </div>
                    <div class="col-5" style="margin: auto;">
                        <div style="float: right;">
                            <% if ( type_user=='Admin' ) { %>
                            <button name='modal' type="button" class="btn bt-add me-1" data-bs-toggle="modal" data-bs-target="#ModalAddCategory">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                </svg>
                                เพิ่มข้อมูล
                            </button>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#MultiDelete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd"d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                                ลบข้อมูล
                            </button>
                            <% } %>
                        </div>
                    </div>
                </div>
                <hr>
                <br>
                <form class="d-flex" action="/searchCategory" method="post">
                    <div class="mb-3">
                        <label>ค้นหาหมวดหมู่</label>
                        <div style="display: flex; flex-flow: row wrap;">
                            <input class="form-control me-2" type="search" name="search" aria-label="Search" style="width: 300px;">
                            <button class="btn" style="background-color: #0073e6; color: white; white-space: nowrap;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                                ค้นหา
                            </button>
                        </div>
                    </div>
                </form>
                <br>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>หมวดหมู่</th>
                            <th style="text-align: center;">จำนวนอุปกรณ์</th>
                            <th style="text-align: center;" hidden></th>
                            <% if ( type_user=='Admin' ) { %>
                                <th style="text-align: center;"></th>
                                <th style="text-align: center;"></th>
                                <th style="text-align: center;">
                                    <input class="form-check-input" type="checkbox" onclick="CheckAll(this);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-all" viewBox="0 0 16 16">
                                        <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992a.252.252 0 0 1 .02-.022zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486-.943 1.179z"/>
                                    </svg>
                                </th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(categorys).forEach(function(item,i){%>
                        <tr>
                            <td style="text-align: center;"><%= order++ %></td>
                            <td><%= item.CategoryName %></td>
                            <td style="text-align: center;">
                                <% let id = item._id %>
                                <% let num = 0 %>
                                <% for(var i=0; i < devices.length; i++) {%>
                                    <% if (devices[i].CategoryID.toString() == id.toString()) { %>
                                        <% num++ %>
                                    <% } %>
                                <% } %>
                                <%= num %>
                            </td>
                            
                            <td style="text-align: center" hidden>
                                <a class="btn btn-outline-primary" href="/category/device/<%= item._id %>">
                                    อุปกรณ์
                                </a>
                            </td>
                            <% if ( type_user=='Admin' ) { %>
                                <td style="text-align: center;">
                                    <button class="btn edit-category" type="button" data-bs-toggle="modal" data-bs-target="#ModalEditCategory"
                                        data-id="<%= item._id %>"
                                        data-categoryname="<%= item.CategoryName %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </button>
                                </td>
                                <td style="text-align: center;">
                                    <a class="btn" href="/delete_category/<%= item._id %>" onclick="return confirm('ต้องการที่จะลบข้อมูล ?');">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                                            viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>
                                </td>
                                <td style="text-align: center;">
                                    <form>
                                        <input class="form-check-input check-delete" type="checkbox" name='StockID-<%= i %>' value="<%= item._id %>" onclick="checkDelete();">
                                        <label class="form-check-label" for="flexCheckDefault">
                                        </label>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                        </svg>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                        <% }) %>
                        <form action="/MultiDeleteCategory" method="post" id="gg">
                            <input class="form-check-input" id="deleteArray" name="deleteArray" type="text" style="display: none">
                        </form>
                    </tbody>
                </table>
                <!-- Modal Add Category -->
                <div class="modal fade" id="ModalAddCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">เพิ่มหมวดหมู่</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/InsertCategory" class="needs-validation" novalidate method="post" id="InsertCategory">
                                    <div class="mb-3">
                                        <label for="message-text" class="col-form-label">ชื่อหมวดหมู่ :</label>
                                        <input type="text" class="form-control category" name="category" required>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" form="InsertCategory">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal MultiDelete -->
                <div class="modal fade" id="MultiDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">ลบหมวดหมู่</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" style="text-align: center;">
                                ต้องการลบข้อมูลหรือไม่
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                                <input class="btn btn-danger" type="submit" value="ตกลง" form="gg">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal Edit Category -->
                <div class="modal fade" id="ModalEditCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">แก้ไขชื่อหมวดหมู่</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/EditCategory" class="needs-validation" novalidate method="post" id="EditCategory">
                                    <div class="mb-3" hidden>
                                        <label for="message-text" class="col-form-label">id :</label>
                                        <input id="id-category" type="text" class="form-control category" name="id_category" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="message-text" class="col-form-label">ชื่อสาขา :</label>
                                        <input id="category-name" type="text" class="form-control category" name="category" required>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" form="EditCategory">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

<script>
    $(document).on("click", ".edit-category", function () {
        var id_category = $(this).data('id');
        var category_name = $(this).data('categoryname');

        $('#id-category').val(id_category);
        $('#category-name').val(category_name);
    });

    function CheckAll(source) {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i] != source)
            {
                checkboxes[i].checked = source.checked;
            }
        }
        var checkedValue = []; 
        checkboxes.forEach(item => {
            checkedValue.push(item.value);
        });
        !source.checked ? document.getElementById('deleteArray').value = '' : document.getElementById('deleteArray').value = checkedValue.slice(1);
        // source.checked ? document.getElementById('deleteArray').value = checkedValue.slice(1) : document.getElementById('deleteArray').value = ''
    }

    function checkDelete() {
        var checkedValue = []; 
        const a = document.querySelectorAll('.check-delete:checked')
        a.forEach(item => {
            checkedValue.push(item.value);
        });
        document.getElementById('deleteArray').value = checkedValue
    }

    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

</script>

</html>