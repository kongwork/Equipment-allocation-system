    <link rel="stylesheet" href="/bst5/css/bootstrap.min.css">
    <script src="/bst5/js/bootstrap.min.js"></script>
    <script src="/bst5/js/bootstrap.bundle.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/all.css">
    <title>ข้อมูลหมวดหมู่</title>
</head>

<body>
    <%- include('navbar') %>
    <%- include('modalProblem', { date: date }) %>
        <div class="d-flex">
            <nav class="nav flex-column full-height-nav">
                <p style="font-size: 20px; text-align: center;">
                    <b>เมนู</b>
                </p>
                <% if ( type_user=='Admin' ) { %>
                    <a class="nav-link" href="/user" style="color: #333333;">
                        <i class="bi bi-people"></i>
                        ข้อมูลผู้ใช้
                    </a>
                    <a class="nav-link" href="/category" style="color: #333333;">
                        <i class=" bi bi-bookmarks"></i>
                        ข้อมูลหมวดหมู่
                    </a>
                    <a class="nav-link" href="/device" style="color: #333333;">
                        <i class="bi bi-cpu"></i>
                        ข้อมูลอุปกรณ์
                    </a>
                    <a class="nav-link position-relative" href="/order" style="color: #333333;">
                        <i class="bi bi-cart"></i>
                        อนุมัติรายการ
                    </a>
                    <a class="nav-link position-relative" href="/problem" style="color: #1a75ff; text-shadow: 0px 0px 5px #1a75ff">
                        <i class="bi bi-exclamation-triangle"></i>
                        รายการปัญหา
                    </a>
                <% } else { %>
                    <a class="nav-link" href="/category" style="color: #333333;">
                        <i class=" bi bi-bookmarks"></i>
                        ข้อมูลหมวดหมู่
                    </a>
                    <a class="nav-link" href="/device" style="color: #333333;">
                        <i class="bi bi-cpu"></i>
                        ข้อมูลอุปกรณ์
                    </a>
                    <a class="nav-link position-relative" href="/order" style="color: #333333;">
                        <i class="bi bi-cart"></i>
                        รายการ
                    </a>
                    <a class="nav-link position-relative" href="/problem" style="color: #1a75ff; text-shadow: 0px 0px 5px #1a75ff">
                        <i class="bi bi-exclamation-triangle"></i>
                        รายการปัญหา
                    </a>
                <% } %>
            </nav>
            <div class="full-height">
                <br>
                <div class="row">
                    <div class="col">
                        <h1>ข้อมูลปัญหา</h1>
                    </div>
                    <% if ( type_user == 'User' ) { %>
                    <div class="col-5" style="margin: auto;">
                        <div style="float: right;">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal-problem">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
                                    <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                                    <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                                </svg>
                                แจ้งปัญหา
                            </button>
                        </div>
                    </div>
                    <% } %>
                    <% if ( type_user == 'Admin' ) { %>
                    <div class="col-5" style="margin: auto;">
                        <div style="float: right;">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#MultiDelete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd"d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                                ลบข้อมูล
                            </button>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#Report">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-filetype-pdf" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5L14 4.5ZM1.6 11.85H0v3.999h.791v-1.342h.803c.287 0 .531-.057.732-.173.203-.117.358-.275.463-.474a1.42 1.42 0 0 0 .161-.677c0-.25-.053-.476-.158-.677a1.176 1.176 0 0 0-.46-.477c-.2-.12-.443-.179-.732-.179Zm.545 1.333a.795.795 0 0 1-.085.38.574.574 0 0 1-.238.241.794.794 0 0 1-.375.082H.788V12.48h.66c.218 0 .389.06.512.181.123.122.185.296.185.522Zm1.217-1.333v3.999h1.46c.401 0 .734-.08.998-.237a1.45 1.45 0 0 0 .595-.689c.13-.3.196-.662.196-1.084 0-.42-.065-.778-.196-1.075a1.426 1.426 0 0 0-.589-.68c-.264-.156-.599-.234-1.005-.234H3.362Zm.791.645h.563c.248 0 .45.05.609.152a.89.89 0 0 1 .354.454c.079.201.118.452.118.753a2.3 2.3 0 0 1-.068.592 1.14 1.14 0 0 1-.196.422.8.8 0 0 1-.334.252 1.298 1.298 0 0 1-.483.082h-.563v-2.707Zm3.743 1.763v1.591h-.79V11.85h2.548v.653H7.896v1.117h1.606v.638H7.896Z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <% } %>
                </div>
                <hr>
                <br>
                <br>
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width:3%">#</th>
                            <th style="width:15%">ชื่อเรื่อง</th>
                            <% if ( type_user=='Admin' ) { %>
                                <th>ผู้แจ้ง</th>
                            <% } %>
                            <th>รายละเอียด</th>
                            <th>การแก้ปัญหา</th>
                            <th style="width:10%">สถานะ</th>
                            <% if ( type_user=='Admin' ) { %>
                                <th style="width:5%"></th>
                                <th style="width:5%"></th>
                                <th style="width:9%">
                                    <input class="form-check-input" type="checkbox" onclick="CheckAll(this);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-all" viewBox="0 0 16 16">
                                        <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992a.252.252 0 0 1 .02-.022zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486-.943 1.179z"/>
                                    </svg>
                                </th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(problems).forEach(function(item,i){%>
                        <tr>
                            <td style="text-align: center;"><%= order++ %></td>
                            <td><%= item.ProblemName %></td>
                            <% if ( type_user=='Admin' ) { %>
                                <td><%= item.UserID.UserName %></td>
                            <% } %>
                            <td><%= item.ProblemDetail %></td>
                            <td><%= item.ProblemSolving %></td>
                            <td style="text-align: center;">
                                <% if (item.Status=='00' ) { %>
                                    <span class="badge rounded-pill bg-secondary">
                                        ยังไม่แก้ไข
                                    </span>
                                <% } else { %>
                                    <span class="badge rounded-pill bg-success">
                                        แก้ไขแล้ว
                                    </span>
                                <% } %>     
                            </td>
                            <% if ( type_user=='Admin' ) { %>
                                <td style="text-align: center;">
                                    <button class="btn edit-problem" type="button" data-bs-toggle="modal" data-bs-target="#ModalEditProblem"
                                        data-id="<%= item._id %>"
                                        data-problemname="<%= item.ProblemName %>"
                                        data-problemdetail="<%= item.ProblemDetail %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </button>
                                </td>
                                <td style="text-align: center;">
                                    <a class="btn" href="/delete_problem/<%= item._id %>" onclick="return confirm('ต้องการที่จะลบข้อมูล ?');">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                                            viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>
                                </td>
                                <td style="text-align: center;">
                                    <form>
                                        <input class="form-check-input check-delete" type="checkbox" name='StockID-<%= i %>' value="<%= item._id %>" onclick="checkDelete();">
                                        <label class="form-check-label" for="flexCheckDefault">
                                        </label>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                        </svg>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                        <% }) %>
                        <form action="/MultiDeleteProblems" method="post" id="gg">
                            <input class="form-check-input" id="deleteArray" name="deleteArray" type="text" style="display: none">
                        </form>
                    </tbody>
                </table>
                <!-- Modal Report -->
                <div class="modal fade" id="Report" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">ออกรายงานการแจ้งปัญหา</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="report-problem" target="_blank" action="/report-problem" method="post">
                                <div class="row">
                                    <div class="col">
                                        <label class="form-label">เริ่มวันที่</label>
                                        <input class="form-control"
                                            value="<%= JSON.stringify(today).substring(1, 11); %>"
                                            type="date" name="startDate">
                                    </div>
                                    <div class="col">
                                        <label class="form-label">ถึงวันที่</label>
                                        <input class="form-control"
                                            value="<%= JSON.stringify(today).substring(1, 11); %>"
                                            type="date" name="endDate">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <input class="btn btn-danger" type="submit" value="PDF" form="report-problem">
                        </div>
                    </div>
                </div>
            </div>
                <!-- Modal MultiDelete -->
                <div class="modal fade" id="MultiDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    ลบข้อมูล ( Checkbox
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16">
                                        <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"/>
                                        <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"/>
                                    </svg> )
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" style="text-align: center;">
                                ต้องการลบข้อมูลหรือไม่
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                                <input class="btn btn-danger" type="submit" value="ตกลง" form="gg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

<script>
    $(document).on("click", ".edit-problem", function () {
        var id_problem = $(this).data('id');
        var problem_name = $(this).data('problemname');
        var problem_detail = $(this).data('problemdetail');

        $('#id-problem').val(id_problem);
        $('#problem-name').val(problem_name);
        $('#problem-detail').val(problem_detail);
    });

    function CheckAll(source) {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i] != source)
            {
                checkboxes[i].checked = source.checked;
            }
        }
        var checkedValue = []; 
        checkboxes.forEach(item => {
            checkedValue.push(item.value);
        });
        !source.checked ? document.getElementById('deleteArray').value = '' : document.getElementById('deleteArray').value = checkedValue.slice(1);
        // source.checked ? document.getElementById('deleteArray').value = checkedValue.slice(1) : document.getElementById('deleteArray').value = ''
    }

    function checkDelete() {
        var checkedValue = []; 
        const a = document.querySelectorAll('.check-delete:checked')
        a.forEach(item => {
            checkedValue.push(item.value);
        });
        document.getElementById('deleteArray').value = checkedValue
    }

    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

</script>

</html>